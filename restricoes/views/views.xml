<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="restricoes.list">
      <field name="name">restricoes list</field>
      <field name="model">restricoes.restricoes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="restricoes.action_window">
      <field name="name">restricoes window</field>
      <field name="res_model">restricoes.restricoes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="restricoes.action_server">
      <field name="name">restricoes server</field>
      <field name="model_id" ref="model_restricoes_restricoes"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="restricoes" id="restricoes.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menu 1" id="restricoes.menu_1" parent="restricoes.menu_root"/>
    <menuitem name="Menu 2" id="restricoes.menu_2" parent="restricoes.menu_root"/>

    <!-- actions -->
    <menuitem name="List" id="restricoes.menu_1_list" parent="restricoes.menu_1" action="restricoes.action_window"/>
    <menuitem name="Server to list" id="restricoes" parent="restricoes.menu_2" action="restricoes.action_server"/>
   
  </data>
</odoo>